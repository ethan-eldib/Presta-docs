                        <dd class="col-md-8">{{ booking.startDate | date('d/m/Y') }}</dd>
                    </dl>
                </div>
                <hr>
                <h2 class="alert-heading">Presta-doc vous remercie</h2>
            </div>
            <div class="col">
            
            </div>
        </div>
    </div>

{% endblock %}