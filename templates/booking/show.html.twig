{% extends "base.html.twig" %}

{% block title %}réservation de votre rendez-vous{% endblock %}

{% block body %}

    <div class="container">
        <h1>Votre rendez-vous</h1>

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Détails</h2>
                    <dl class="row">
                        <dt class="col-md-4">Numéro</dt>
                        <dd class="col-md-8">{{ booking.id }}</dd>
