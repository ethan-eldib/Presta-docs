{% extends 'base.html.twig' %}

{% block title %}prendre un rendez-vous
{% endblock %}

{% block body %}

	<div class="container">
		<h1>Prendre un rendez-vous télephonique</h1>

		<div class="row">
			<div class="col">
				<div>Calendar</div>
				<pre>
					{{ dump(data) }}
				</pre>
			</div>
			<div class="col">
				{{form_start(form)}}
				<div class="alert alert-light">
					<h2>Choisissez votre créneau</h2>
					<div class="col">
						{{form_row(form.startDate)}}
					</div>
					<div class="col">
						{{form_row(form.startTime)}}
						{# {{form_row(form.endTime)}} #}
					</div>
				</div>

				<button type="submit" class="btn btn-success">Prendre rendez-vous</button>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
