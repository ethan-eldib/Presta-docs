{% extends 'admin/base.html.twig' %}

{% block title %}
	Contenu du dossier
{% endblock %}

{% block body %}
	<div class="container my-5 ">
		{% for folder in folders %}
			<h1 class="text-center mb-5">Contenu du dossier "{{ folder.title }}"</h1> 
			<h4 class="text-center mt-0">Dossier n° {{ folder.id }}</h4>
		{% endfor %}
		<a href="{{ path('admin_folders_index') }}">
			<i class="fas fa-arrow-circle-left"></i>
			Liste des dossiers
		</a>
		<hr>
		<h5 class="mt-5 text-center">Envoyé par : {{ documents[0].user.email }}</h5>
		{% for document in documents %}
			<div class="col-md-8 mx-auto mt-5 card">
				<embed src="{{ asset('/uploads/' ~ document.name) }}" type='application/pdf'>
				<a class="mt-3" style="max-width:24px;" href="{{ asset('/uploads/' ~ document.name) }}" download="{{document.name}}">
					<i class="fas fa-download"></i>
				</a>
			</div>
		{% endfor %}

	</div>
{% endblock %}
